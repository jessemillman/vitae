package components 

import (
	"github.com/jessemillman/vitae/types"
)

templ Skills(items []types.Skills) {
	<section class="skills-section flex min-h-0 flex-col gap-y-3">
		<h2 class="text-xl font-bold">Skills</h2>
		<div class="skills flex flex-wrap gap-1">
			for _, item := range items {
				<div class="skills-item inline-flex items-center rounded-md border px-2 py-0.5 text-xs font-semibold font-mono transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-nowrap border-transparent bg-primary/80 text-primary-foreground hover:bg-primary/60">
					{ item.Name }
				</div>
			}
		</div>
	</section>
}
